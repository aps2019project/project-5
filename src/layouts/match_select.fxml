<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="container"
            stylesheets="/resources/stylesheets/match-select.css" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.graphics.MatchSelect">

    <children>
        <ImageView fitHeight="420.0" fitWidth="230.0" layoutX="350" layoutY="280" pickOnBounds="true"
                   preserveRatio="true" styleClass="matchSelect" onMouseClicked="#deathMatch">
            <Image url="/resources/play/play_mode_sandbox@2x.jpg"/>

        </ImageView>
        <ImageView fitHeight="420.0" fitWidth="230.0" layoutX="680" layoutY="280" pickOnBounds="true"
                   preserveRatio="true" styleClass="matchSelect" onMouseClicked="#singleFlagMode">
            <Image url="/resources/play/play_mode_arenagauntlet@2x.jpg"/>
        </ImageView>
        <ImageView fitHeight="420.0" fitWidth="230.0" layoutX="1340" layoutY="280" pickOnBounds="true"
                   preserveRatio="true" styleClass="matchSelect" onMouseClicked="#multiFlagMode">
            <Image url="/resources/play/play_mode_rift@2x.jpg"/>
        </ImageView>
        <ImageView fitHeight="420.0" fitWidth="230.0" layoutX="1010" layoutY="280" pickOnBounds="true"
                   preserveRatio="true" styleClass="matchSelect" onMouseClicked="#Extra">
            <Image url="/resources/play/play_mode_bossbattle@2x.jpg"/>
        </ImageView>
        <Label text="Death Match" styleClass="menu-button" layoutX="410" layoutY="650"/>
        <Label text="Single Flag Mode" styleClass="menu-button" layoutX="710" layoutY="650"/>
        <Label text="Multi Flag Mode" styleClass="menu-button" layoutX="1060" layoutY="650"/>
        <Label text="Extra" styleClass="menu-button" layoutX="1440" layoutY="650"/>
        <Label text="Back" styleClass="back-button" layoutX="40" layoutY="40" onMouseClicked="#back"/>
    </children>
</AnchorPane>
