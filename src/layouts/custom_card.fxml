<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" fx:id="root"
            stylesheets="@../resources/stylesheets/custom-card.css" styleClass="shop-container"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.graphics.GraphicCustomCardMenu">
    <ImageView fx:id="backBtn" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" fitWidth="100" fitHeight="100" onMouseClicked="#back">
        <Image url="/resources/images/buttons/back-button.png"/>
    </ImageView>
    <VBox prefHeight="900.0" prefWidth="830.0" spacing="20" styleClass="text-field-container" alignment="center"
          AnchorPane.leftAnchor="550" AnchorPane.topAnchor="100">
        <padding><Insets top="30" /> </padding>
        <Label styleClass="header-label" text="ADD YOUR OWN CARD"/>
        <ScrollPane styleClass="text-field-container" hbarPolicy="NEVER" >
            <VBox alignment="CENTER" spacing="40" styleClass="text-field-container">
                <padding><Insets topRightBottomLeft="30" /> </padding>
                <HBox alignment="CENTER" spacing="40" >
                    <VBox spacing="20" >
                        <Label fx:id="nameLbl" text="Card Name:" styleClass="label" />
                        <Label fx:id="idLbl" text="ID:" styleClass="label" />
                        <Label fx:id="priceLbl" text="Price:" styleClass="label" />
                        <Label fx:id="manaPointLbl" text="Mana Point:" styleClass="label" />
                        <Label fx:id="powerLbl" text="Power:" styleClass="label" />
                        <Label fx:id="healthLbl" text="Health:" styleClass="label" />
                        <Label fx:id="rangeLbl" text="Range:" styleClass="label" />
                        <Label fx:id="attackTypeLbl" text="Attack Type:" styleClass="label" />
                        <Label fx:id="attackPointLbl" text="Attack Point:" styleClass="label" />
                        <Label fx:id="counterAttackLbl" text="Counter Attack:" styleClass="label" />
                        <Label fx:id="turnAttackAvLbl" text="Is available for turn attack?" styleClass="label" />
                        <Label fx:id="moveAvLbl" text="Has move Ability?" styleClass="label" />
                        <Label fx:id="maxDisLbl" text="Max Distance to move:" styleClass="label" />
                        <Label fx:id="comboAbilityLbl" text="Combo Ability:" styleClass="label" />
                    </VBox>
                    <VBox spacing="20" >
                        <JFXTextField fx:id="nameTxt" promptText="my minion" styleClass="input-text" onKeyTyped="#backToNormal"/>
                        <JFXTextField fx:id="idTxt" promptText="102" styleClass="input-text" onKeyTyped="#backToNormal"/>
                        <JFXTextField fx:id="priceTxt" promptText="30(drakes)" styleClass="input-text" onKeyTyped="#backToNormal"/>
                        <JFXTextField fx:id="manaPointTxt" promptText="4" styleClass="input-text" onKeyTyped="#backToNormal"/>
                        <JFXTextField fx:id="powerTxt" promptText="20" styleClass="input-text" onKeyTyped="#backToNormal"/>
                        <JFXTextField fx:id="healthTxt" promptText="15" styleClass="input-text" onKeyTyped="#backToNormal"/>
                        <JFXTextField fx:id="rangeTxt" promptText="2" styleClass="input-text" onKeyTyped="#backToNormal"/>
                        <JFXComboBox fx:id="attackTypeCmb" promptText="MELEE" styleClass="input-text" onMouseClicked="#backToNormal">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="MELEE" />
                                    <String fx:value="HYBRID" />
                                    <String fx:value="Ranged" />
                                </FXCollections>
                            </items>
                        </JFXComboBox>
                        <JFXTextField fx:id="attackPointTxt" promptText="3" styleClass="input-text" onKeyTyped="#backToNormal"/>
                        <JFXComboBox fx:id="counterAttackCmb" promptText="Has" styleClass="input-text" onMouseClicked="#backToNormal">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Has" />
                                    <String fx:value="Don't have" />
                                </FXCollections>
                            </items>
                        </JFXComboBox>
                        <JFXComboBox fx:id="turnAttackAvCmb" promptText="No" styleClass="input-text" onMouseClicked="#backToNormal">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Yes" />
                                    <String fx:value="No" />
                                </FXCollections>
                            </items>
                        </JFXComboBox>
                        <JFXComboBox fx:id="moveAvCmb" promptText="Yes" styleClass="input-text" onMouseClicked="#backToNormal">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Yes" />
                                    <String fx:value="No" />
                                </FXCollections>
                            </items>
                        </JFXComboBox>
                        <JFXTextField fx:id="maxDisTxt" promptText="2" styleClass="input-text" onKeyTyped="#backToNormal"/>
                        <JFXTextField fx:id="comboAbilityTxt" promptText="0" styleClass="input-text" onKeyTyped="#backToNormal"/>
                    </VBox>
                </HBox>
                <JFXButton fx:id="addBtn" text="Add Card" styleClass="btn-primary, btn-lg" onAction="#addCard"/>
            </VBox>
        </ScrollPane>
    </VBox>
</AnchorPane>
