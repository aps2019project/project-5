<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXMasonryPane?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1080" prefWidth="1920" styleClass="shop-container"
            stylesheets="@../resources/stylesheets/shop-style.css" xmlns="http://javafx.com/javafx/8.0.999-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.graphics.GraphicCollectionMenu">
    <ScrollPane hbarPolicy="NEVER" styleClass="shop-card-container" AnchorPane.bottomAnchor="40"
                AnchorPane.leftAnchor="480" AnchorPane.rightAnchor="300" AnchorPane.topAnchor="130">
        <JFXMasonryPane fx:id="cardContainer" prefHeight="910" prefWidth="1350" styleClass="inner-container"/>
    </ScrollPane>
    <TextField fx:id="searchField" promptText="Search" styleClass="shop-search" AnchorPane.rightAnchor="40"
               AnchorPane.topAnchor="40"/>
    <ImageView fx:id="backBtn" fitHeight="100" fitWidth="100" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
        <Image url="/resources/images/buttons/back-button.png"/>
    </ImageView>
    <Label fx:id="filterNone" styleClass="shop-filter-label, selected" text="All Cards" AnchorPane.leftAnchor="480"
           AnchorPane.topAnchor="50"/>
    <Label fx:id="filterHeroes" styleClass="shop-filter-label" text="Heroes" AnchorPane.leftAnchor="630"
           AnchorPane.topAnchor="50"/>
    <Label fx:id="filterMinions" styleClass="shop-filter-label" text="Minions" AnchorPane.leftAnchor="780"
           AnchorPane.topAnchor="50"/>
    <Label fx:id="filterSpells" styleClass="shop-filter-label" text="Spells" AnchorPane.leftAnchor="930"
           AnchorPane.topAnchor="50"/>
    <VBox alignment="TOP_CENTER" layoutX="1644.0" layoutY="140.0" prefHeight="900.0" prefWidth="256.0" spacing="20"
          styleClass="container-account-menu" stylesheets="@../resources/stylesheets/login-style.css"
          AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="1644.0" AnchorPane.rightAnchor="20"
          AnchorPane.topAnchor="140.0" xmlns="http://javafx.com/javafx/8.0.172-ea">
        <JFXTextField fx:id="newDeckNameTxt" promptText="Sample Deck" styleClass="input-text"/>
        <JFXButton fx:id="saveDeckBtn" onMouseClicked="#createNewDeck" styleClass="btn-primary, btn-lg" text="Save"/>
        <ScrollPane hbarPolicy="NEVER" styleClass="shop-card-container" prefHeight="400">
            <VBox fx:id="deckList" styleClass="inner-container"/>
        </ScrollPane>
        <ScrollPane hbarPolicy="NEVER" styleClass="shop-card-container" prefHeight="400">
            <VBox fx:id="selectedDeckCardList" styleClass="inner-container"/>
        </ScrollPane>
    </VBox>
</AnchorPane>
